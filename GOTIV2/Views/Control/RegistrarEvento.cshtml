@model GOTIV2.Models.MetaActividadSeguimiento
@{
    ViewBag.Title = "Registrar Evento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p>&nbsp;</p>
<h4>Registrar Eventos</h4>

<p>&nbsp;</p>
    @using (Html.BeginForm())
    {
        <div class="panel panel-primary">
            <div class="panel-heading">Actividad : @ViewBag.Actividad.MetaActividad_descripcion</div>
            <div class="panel-body">
                <div class="row form-group">

                    @Html.TextBoxFor(x => x.ActividadId, new { @id = @ViewBag.Actividad.MetaActividad_id, @type = "hidden", @class = "form-control" })

                                 


                </div>
                <div class="row form-group">

                    <div class="col-md-2 control-label">Acción</div>
                    <div class="col-md-2">
                        @Html.DropDownListFor(x => x.Acción, new SelectList(
                         new[] {new SelectListItem { Text = "SI", Value= "true"   }
                                ,new SelectListItem { Text = "NO", Value= "false"   }
                                 }, "Value", "Text"
                              ),
                              new
                             {

                                 @class = "form-control"
                             })
                    </div>

                </div>   
                <div class="row form-group">
                    <div class="col-md-2 control-label">Descripción</div>
                    <div class="col-md-6">
                        @Html.TextAreaFor(x => x.Descripción, new { @class = "form-control" })
                    </div>

                </div>



                </div>


            <div class="panel-footer text-right">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>


        </div>
    }


