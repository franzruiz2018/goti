@model List<GOTIV2.Models.STG_Expediente>
@{
    ViewBag.Title = "Expedientes";

}

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4>Seleccionar Expedientes</h4>
    </div>
    <div class="modal-body">
        <table class="table table-bordered" style="font-size: smaller">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nro Expediente</th>
                    <th>Documento</th>
                    <th>Fecha</th>  
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Expediente_Id</td>

                        <td> @item.NroExpediente</td>
                        <td>
                           @item.DocumentoAdjuntoExpediente
                        </td>
                        <td>@item.FechaRecepcionOTI.Value.ToShortDateString()</td>                      

                        <td><button class="selEstab glyphicon glyphicon-log-in"></button></td>

                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

<script type="text/javascript">
    $(function () {

        $(".selEstab").click(function (e) {
            var fila = $(this).parent().parent();
            var f = fila[0];
            $("#ExpedienteId").val(f.cells[0].innerText);
            $("#NumExpediente").val(f.cells[1].innerText);
            $("#modal-app").modal("hide");

        });
    });
</script>


