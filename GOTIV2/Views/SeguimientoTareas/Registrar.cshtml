@model GOTIV2.Models.SPS_Tarea
@{
    ViewBag.Title = "Registrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var msj = TempData["Mensaje"];
}

<p>&nbsp;</p>
<h4>Registrar Tarea</h4>
<p>&nbsp;</p>

@using (Html.BeginForm())
{

    <div class="form-horizontal">

       
        <div class="row form-group">
            <div class="col-md-2 control-label">Descripción</div>
            <div class="col-md-10">
                @Html.TextAreaFor(x => x.Tarea_Descripcion, new { @class = "form-control", @required = true })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 control-label">Personal</div>
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.PersonaId, (SelectList)ViewBag.PersonaOTI, "Seleccione", new { @class = "form-control", @required = true })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 control-label">Objetivo</div>
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.ObjetivoOTI_Id, (SelectList)ViewBag.Objetivos, "Seleccione", new { @class = "form-control", @required = true })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 control-label">Aprobado</div>
            <div class="col-md-10">
                @Html.CheckBoxFor(x => x.Aprobado)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary" onsubmit="return confirm('¿Estas seguro de guardar?')" />
            </div>
        </div>
    </div>


}



