@model GOTIV2.Models.SPS_Automatizacion
@{
    ViewBag.Title = "Registrar Avance en la Automatización de los Sistemas de Información";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var msj = TempData["Mensaje"];
}

<p>&nbsp;</p>
<h4>Registrar Avance en la Automatización de los Sistemas de Información</h4>
<p>&nbsp;</p>

@using (Html.BeginForm())
{

    <div class="form-horizontal">



        <div class="form-group">
            <div class="col-md-2 control-label">Sistema</div>
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.SistemaId, (SelectList)ViewBag.Sistemas, "Seleccione", new { @class = "form-control", @required = true })
            </div>
        </div>


        <div class="row form-group">
            <div class="col-md-2 control-label">Fecha Avance</div>
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.FechaAvance, new { @class = "form-control", @required = true })
            </div>
        </div>

        <div class="row form-group">
            <div class="col-md-2 control-label">% Avance</div>
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Avance, new { @class = "form-control", @required = true })
            </div>
        </div>
        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary" onsubmit="return confirm('¿Estas seguro de guardar?')" />
            </div>
        </div>
    </div>


}

@section scripts{
    @Scripts.Render("~/bundles/highcharts")
    @Scripts.Render("~/Scripts/fnGenerales.js")
    <script src="~/Scripts/fechaMascara.js"></script>

    <script type="text/javascript">
        $(function () {
            $("#FechaAvance").mask("99/99/9999");
        });

    </script>



}
