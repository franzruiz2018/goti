@model List<GOTIV2.Models.SPE_Persona>
@{
    ViewBag.Title = "_Persona";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4>Seleccionar</h4>
    </div>
    <div class="modal-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Persona</th>
                    <th>Area</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Persona_Id</td>
                        <td>@item.NombreCompleto</td>
                        <td>@item.SPE_AreaInstitucion.AreaInstitucionAbreviatura</td>
                        <td><button class="selEstab btn btn-warning" id="@item.Persona_Id">Seleccionar</button></td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

<script type="text/javascript">
    $(function () {

        $(".selEstab").click(function (e) {
            $("#txtCodigoEESS").val($(this).attr("id"));
            $("#modal-app").modal("hide");

        });
    });
</script>



