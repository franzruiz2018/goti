@model GOTIV2.Models.Meta
@{
    ViewBag.Title = "Registrar Metas";
}

<h2>Registrar Metas</h2>

@if (ViewBag.Exito == true)
{
    <div class="alert alert-success" role="alert">@ViewBag.Mensaje</div>
    <div class="form-group">
        @Html.ActionLink("Ir a listado", "Index", null, new { @class = "btn btn-primary" })

        @if (ViewBag.Perfil == 1 || ViewBag.Perfil == 2)
        {
             @Html.ActionLink("Ir a Registro", "Save", null, new { @class = "btn btn-primary" })

        }

       
    </div>
}
else
{
    if (ViewBag.Mensaje != null)
    {
        <div class="alert alert-danger" role="alert">@ViewBag.Mensaje</div>
    }

    using (Html.BeginForm())
    {
        <div class="panel panel-primary">
            <div class="panel-heading">Registrar Metas</div>
            <div class="panel-body">
                <div class="row form-group">
                    <div class="col-md-1 control-label">Sub Area</div>
                    <div class="col-md-4">
                        @Html.DropDownListFor(x =>x.SubArea_id, (SelectList)ViewBag.SubArea, new { @class = "form-control" })
                    </div>
                    <div class="col-md-1 control-label">POI</div>
                    <div class="col-md-2">
                        @Html.DropDownList("poi", new SelectList(
                             new[] {new SelectListItem { Text = "SI", Value= "1"   }
                                    ,new SelectListItem { Text = "NO", Value= "0"   }
                                     }, "Value", "Text"
                                  ),
                                  new
                                 {

                                     @class = "form-control"
                                 })
                    </div>                  

                </div>

                <div class="row form-group">
                    <div class="col-md-1 control-label">Versión</div>
                    <div class="col-md-4">
                        @Html.DropDownListFor(x =>x.Version_id, (SelectList)ViewBag.Version, new { @class = "form-control" })
                    </div>

                    <div class="col-md-1 control-label">Meta</div>
                    <div class="col-md-6">
                        @Html.TextAreaFor(x => x.Meta_descripcion, new { @class = "form-control" })
                    </div>
                
                </div>

            </div>
            <div class="panel-footer text-right">
                <input type="submit" value="Guardar" class="btn btn-primary" />
              </div>


        </div>
    }
}

