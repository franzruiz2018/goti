@model List<GOTIV2.Models.sp_STG_Documentos_Listar_Result>
@{
    ViewBag.Title = "Persona";

}

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4>Seleccionar Documentos</h4>
    </div>
    <div class="modal-body">
        <table class="table table-bordered" style="font-size: smaller">
            <thead>
                <tr>
                    <th >ID</th>
                
                    <th>NroDocumento</th>
                    <th>Remitente / Destinatario</th>
                    <th>Descripción</th>                   
                    <th>Fecha Documento</th>
                   
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Documento_Id</td>
                     
                        <td> @item.TipoDocumentoDescripcion - @item.NroDocumento</td>
                        <td>                                         
                           Remitente: @item.AreaInstitucionRemitente-@item.UsuarioRemitente
                            <br />
                           Destinatario: @item.AreaInstitucionDestinatario-@item.UsuarioDestinatario
                            <br />
                        </td>
                        <td>@item.Asunto</td>
                       
                        <td> 
                        @if (item.FechaDocumento != null)
                        {
                             @item.FechaDocumento.Value.ToShortDateString()
                            
                        }
                       </td>
                       
                        <td><button class="selEstab glyphicon glyphicon-log-in"></button></td>

                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

<script type="text/javascript">
    $(function () {

        $(".selEstab").click(function (e) {
            var fila = $(this).parent().parent();
            var f = fila[0];
            $("#txtDocumento").val(f.cells[0].innerText);
            $("#NroDocumento").val(f.cells[1].innerText);
            $("#modal-app").modal("hide");

        });
    });
</script>



