@model List<GOTIV2.Models.SPE_Persona>
@{
    ViewBag.Title = "Persona";
   
}

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4>Seleccionar Personal</h4>
    </div>
    <div class="modal-body">
        <table class="table table-bordered" style="font-size: smaller">
            <thead>
                <tr>
                    <th>ID</th>
                    @*<th>ID</th>*@
                    <th>Persona</th>
                    <th>Area</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Persona_Id</td>
                        @*<td>P-@string.Format("{0:000}", item.Persona_Id)</td>*@
                        <td>@item.NombreCompleto</td>
                        <td>@item.SPE_AreaInstitucion.AreaInstitucionAbreviatura</td>
                        <td><button class="selEstab glyphicon glyphicon-log-in"></button></td>                     
                      
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

<script type="text/javascript">
    $(function () {

        $(".selEstab").click(function (e) {
            var fila = $(this).parent().parent();
            var f = fila[0];
            $("#UsuarioIdSolicitante").val(f.cells[0].innerText);
            $("#txtPersona").val(f.cells[1].innerText);
            $("#modal-app").modal("hide");
          
        });
    });
</script>



