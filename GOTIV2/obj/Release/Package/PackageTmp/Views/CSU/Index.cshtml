@section scripts{

   


    <script type="text/javascript">


        $("#cerrado").change(function () {


            var UdrId = $("#cerrado").val();

            if (UdrId == 0) {
                $('input:checkbox[name=iniciado]').prop("disabled", false);
            }
            else {

                $('input:checkbox[name=iniciado]').prop("disabled", true);
            }
            if (UdrId == "") {
                $('input:checkbox[name=iniciado]').prop("disabled", true);
            }

                  
      });








    </script>





}